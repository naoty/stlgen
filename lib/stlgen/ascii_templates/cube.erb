solid <%= @text %>
    facet normal 0 0 1
        outer loop
            vertex 0 0 <%= @length %>
            vertex <%= @width %> 0 <%= @length %>
            vertex 0 <%= @height %> <%= @length %>
        endloop
    endfacet
    facet normal 0 0 1
        outer loop
            vertex <%= @width %> <%= @height %> <%= @length %>
            vertex 0 <%= @height %> <%= @length %>
            vertex <%= @width %> 0 <%= @length %>
        endloop
    endfacet
    facet normal 1 0 0
        outer loop
            vertex <%= @width %> 0 <%= @length %>
            vertex <%= @width %> 0 0
            vertex <%= @width %> <%= @height %> <%= @length %>
        endloop
    endfacet
    facet normal 1 0 0
        outer loop
            vertex <%= @width %> <%= @height %> 0
            vertex <%= @width %> <%= @height %> <%= @length %>
            vertex <%= @width %> 0 0
        endloop
    endfacet
    facet normal 0 0 -1
        outer loop
            vertex <%= @width %> 0 0
            vertex 0 0 0
            vertex <%= @width %> <%= @height %> 0
        endloop
    endfacet
    facet normal 0 0 -1
        outer loop
            vertex 0 <%= @height %> 0
            vertex <%= @width %> <%= @height %> 0
            vertex 0 0 0
        endloop
    endfacet
    facet normal -1 0 0
        outer loop
            vertex 0 0 0
            vertex 0 0 <%= @length %>
            vertex 0 <%= @height %> 0
        endloop
    endfacet
    facet normal -1 0 0
        outer loop
            vertex 0 <%= @height %> <%= @length %>
            vertex 0 <%= @height %> 0
            vertex 0 0 <%= @length %>
        endloop
    endfacet
    facet normal 0 1 0
        outer loop
            vertex 0 <%= @height %> <%= @length %>
            vertex <%= @width %> <%= @height %> <%= @length %>
            vertex 0 <%= @height %> 0
        endloop
    endfacet
    facet normal 0 1 0
        outer loop
            vertex <%= @width %> <%= @height %> 0
            vertex 0 <%= @height %> 0
            vertex <%= @width %> <%= @height %> <%= @length %>
        endloop
    endfacet
    facet normal 0 -1 0
        outer loop
            vertex <%= @width %> 0 <%= @length %>
            vertex 0 0 <%= @length %>
            vertex <%= @width %> 0 0
        endloop
    endfacet
    facet normal 0 -1 0
        outer loop
            vertex 0 0 0
            vertex <%= @width %> 0 0
            vertex 0 0 <%= @length %>
        endloop
    endfacet
endsolid
